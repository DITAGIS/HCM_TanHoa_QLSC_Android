<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="qlsctanhoa.hcm.ditagis.com.qlsc.ThongKeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chuc_nang_thong_ke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng các sự cố" />

        <TextView
            android:id="@+id/txtTongSuCo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtPhanTramTongSuCo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Chưa sửa" />

            <TextView
                android:id="@+id/txtChuaSua"
                android:gravity="right"
                android:padding="3dip"
                />
            <TextView
                android:id="@+id/txtPhanTramChuaSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Đang sửa" />

            <TextView
                android:id="@+id/txtDangSua"
                android:gravity="right"
                android:padding="3dip"
                android:text="" />
            <TextView
                android:id="@+id/txtPhanTramDangSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Đã sửa" />

            <TextView
                android:id="@+id/txtDaSua"
                android:gravity="right"
                android:padding="3dip"
                android:text="" />
            <TextView
                android:id="@+id/txtPhanTramDaSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biểu đồ thống kê" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>


</LinearLayout>
