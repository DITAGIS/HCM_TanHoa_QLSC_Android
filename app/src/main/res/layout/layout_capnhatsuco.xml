<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_title_popup"
        android:text="@string/title_su_co"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/linearlayout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_field_name">
        <!--ID sự cố-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/width_title_item_docso"
                android:layout_height="wrap_content"
                android:text="ID sự cố: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_id_su_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp" />
        </LinearLayout>

        <!--vị trí sự cố-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/width_title_item_docso"
                android:layout_height="wrap_content"
                android:text="Vị trí: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_vi_tri_su_co"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp" />
        </LinearLayout>

        <!--trạng thái sự cố-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/width_title_item_docso"
                android:layout_height="wrap_content"
                android:text="Trạng thái: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin_trang_thai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/trangthai_arrays"
                android:textSize="17sp" />
        </LinearLayout>

        <!--ngày cập nhật sự cố-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/width_title_item_docso"
                android:layout_height="wrap_content"
                android:text="N.Cập nhật: "
                android:layout_gravity="center_vertical"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_ngay_cap_nhat"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_ngay_cap_nhat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:background="@color/colorWhite"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_padding">


        <ImageButton
            android:id="@+id/imgBtn_capnhatsuco_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_save" />

        <ImageButton
            android:id="@+id/imgBtn_capnhatsuco_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>

</LinearLayout>